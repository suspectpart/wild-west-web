---
import Layout from '../layouts/Layout.astro';
import DateCard from '../components/DateCard.astro';
import Article from '../components/Article.astro';

const dates = [
  {
    date: '12.10.',
    title: 'Termin X',
    text: 'Dies ist ein Beispieltermin',
    href: '#',
  },
  {
    date: '12.10.',
    title: 'Termin X',
    text: 'Dies ist ein Beispieltermin. Mit mehr Text und Zeilenumbruch. Dies ist ein Beispieltermin. Mit mehr Text und Zeilenumbruch.',
    href: '#',
  },
  {
    date: '12.10.',
    title: 'Termin X',
    text: 'Dies ist ein Beispieltermin',
    href: '#',
  },
];

const articles = [1, 2, 3];
---

<Layout title="Welcome to Astro.">
  <main
    class="mx-auto grid max-w-full grid-cols-1 gap-4 rounded-2xl rounded-tl-none rounded-tr-none bg-ww-black p-4 sm:max-w-[90vw] sm:rounded-tl-2xl xl:grid-cols-4"
  >
    <section
      class="flex flex-col gap-8 rounded-2xl bg-ww-white/90 p-4 sm:p-8 xl:col-span-3 xl:rounded-r-none"
    >
      {articles.map(() => <Article />)}
    </section>
    <section
      class="flex flex-col gap-8 rounded-xl bg-gradient-to-b from-purple to-dark-orange p-4 sm:p-8 xl:rounded-l-none"
    >
      {dates.map((date) => <DateCard {date} />)}
    </section>
  </main>
</Layout>
